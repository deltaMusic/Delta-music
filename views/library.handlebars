<h1>This is MyLibrary</h1>

<ul>
    {{#each rows}}
    <li>{{ @index }} : {{ playlistID }}: <a href="/playlist">{{ name }}</a></li>
       
    {{/each}}
</ul>

<div id="playForm">

    <form method="post" action="/create_playlist">
        <input type="text" name="playlist_name" placeholder="Please Enter Playlist Name">
        <input type="submit" value="Create New Playlist">
    </form>

</div>

<br>
<br>

<form  method="post" action="/delete_playlist">
    <input type="text" name="playlist" placeholder="Please Enter a PlaylistID">
    <button type="submit">Delete!!</button>
</form>

<br>
<br>

<form action="/delete_playlist_range" method="post">
    <div>Start: <input type="text" name="start"></div>
    <div>Finish: <input type="text" name="finish"></div>
    <input type="submit" value="Delete Playlist">
</form>



